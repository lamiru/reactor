{% extends "_layout.html" %}
{% load bootstrap3 %}
{% block css %}
{% endblock %}
{% block content %}
{% for topic in topic_list %}
.panel.panel-default
  .panel-heading
    .pull-left {{ topic.actor }} ({{ topic.created_at }})
    .pull-right
      %form{action: '{% url "topics:delete" topic.pk %}', method: 'POST', enctype: 'multipart/form-data'}
        {% csrf_token %}
        %button Delete
    .clearfix
  .panel-body {{ topic.contents }}
{% endfor %}
.container
  .row
    %form{action: '{% url "topics:new" %}', method: 'POST', enctype: 'multipart/form-data'}
      {% csrf_token %}
      .col-sm-8
        {% bootstrap_field form.contents show_label=False %}
      .col-sm-4
        {% buttons %}
        %button.btn.btn-primary.width-100p Create Topic
        {% endbuttons %}
{% endblock %}
