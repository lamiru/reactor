{% extends "_layout.html" %}
{% load bootstrap3 %}
{% block content %}
.mw-400.margin-center
  %p.text-center Are you sure to delete the reaction?
  .panel.panel-primary
    .panel-body
      %p.mb-0
        %a{href: '{% url "reactions:detail" reaction.pk %}'}
          %span {{ reaction.title }}
      %p.mb-0
        %span {{ reaction.contents }}
  %form{action: '', method: 'POST', enctype: 'multipart/form-data'}
    {% csrf_token %}
    %input{type: 'hidden', name: 'next', value: '{{ next }}'}
    .text-center.pt-10
      {% buttons %}
      %button.btn.btn-lg.btn-primary.width-100p Delete
      {% endbuttons %}
      %button.btn.btn-lg.btn-warning.width-100p Cancel
{% endblock %}
